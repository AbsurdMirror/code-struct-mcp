{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@api/*": ["./api/*"],
      "@types/*": ["./api/types/*"],
      "@storage/*": ["./api/storage/*"],
      "@modules/*": ["./api/modules/*"]
    }
  },
  "include": [
    "tests/**/*",
    "api/**/*",
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "ts-node": {
    "transpileOnly": false,
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node"
    }
  }
}