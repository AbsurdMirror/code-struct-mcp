{
  "name": "Code Structure MCP Server",
  "description": "MCP服务器用于代码结构分析和模块管理",
  "transport": "stdio",
  "command": "node",
  "args": ["dist/server.js"],
  "env": {
    "NODE_ENV": "development",
    "DEBUG": "true",
    "LOG_LEVEL": "debug",
    "STORAGE_PATH": "./data",
    "BACKUP_ENABLED": "true",
    "BACKUP_INTERVAL": "300000"
  },
  "inspector": {
    "client_port": 6274,
    "server_port": 6277,
    "auto_open": true,
    "allowed_origins": ["http://localhost:6274"]
  },
  "testing": {
    "test_modules": [
      {
        "name": "TestModule",
        "type": "class",
        "hierarchical_name": "test.TestModule",
        "file_path": "/test/example.ts",
        "description": "测试模块示例"
      }
    ],
    "test_queries": [
      "TestModule",
      "class",
      "function",
      "test"
    ]
  }
}